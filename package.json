{
  "name": "axiom-marketplace-systems",
  "version": "0.2.0",
  "private": true,
  "type": "commonjs",
  "description": "Organized marketplace system (systems/marketplace) separating server and client layers.",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "start:market:legacy": "node market-server.js",
    "seed": "cross-env MARKET_SEED_DEMO=1 node server.js",
    "dev:db": "cross-env MARKET_MONGO_URL=mongodb://127.0.0.1:27017/axiom_market MARKET_CREATE_INDEXES_ON_START=1 MARKET_SEED_DEMO=1 MARKET_ALLOW_DB_FAIL=1 MARKET_PORT=3002 node server.js",
    "dev:mem": "cross-env MARKET_ALLOW_DB_FAIL=1 MARKET_PORT=3002 node server.js",
    "dev:5500": "cross-env MARKET_ALLOW_DB_FAIL=1 MARKET_PORT=5500 node server.js",
    "lint": "echo 'No linter configured'",
    "db:indexes": "node ./scripts/ensure-indexes.js",
    "db:indexes:staging": "cross-env MONGO_URI=mongodb://127.0.0.1:27017/axiom_market node ./scripts/ensure-indexes.js",
    "perf:k6": "echo Run: k6 run scripts/perf/k6-market.js --env BASE_URL=http://localhost:3002 --env VUS=50 --env DURATION=5m",
    "test:unit": "cross-env MARKET_ALLOW_DB_FAIL=1 JWT_SECRET=dev_secret_123 jest --runInBand",
    "test:e2e:newman": "node ./scripts/run-newman-e2e.js",
    "test:e2e:smoke": "node ./scripts/smoke-rbac-media.test.js && node ./scripts/smoke-jwks-autorefresh.test.js",
    "test": "npm run test:unit && npm run test:e2e:smoke && npm run test:e2e:newman && node ./scripts/smoke-e2e-user.test.js && node ./scripts/smoke-e2e-seller.test.js",
    "ci:smoke": "node ./scripts/ci-smoke.js",
    "test:ci": "cross-env MARKET_ALLOW_DB_FAIL=1 JWT_SECRET=dev_secret_123 jest --config jest.config.js --passWithNoTests --runInBand",
    "ci:sse": "cross-env MARKET_ALLOW_DB_FAIL=1 MARKET_PORT=3002 node ./scripts/ci-sse-smoke.js",
    "docs:diagram": "mmdc -i docs/architecture_diagram.mmd -o docs/architecture_diagram.png -b transparent -s 1.2",
    "docs:pdf": "md-to-pdf docs/AI_ARCHITECTURE_GUIDE.md docs/AI_ARCHITECTURE_GUIDE_EN.md > docs/AI_Portable_Agent_Guide.pdf",
    "docs:pdf:overview": "md-to-pdf docs/MARKETPLACE_SYSTEM_OVERVIEW_AR.md docs/MARKETPLACE_SYSTEM_OVERVIEW_EN.md > docs/Marketplace_System_Overview_BI.pdf",
    "docs:build": "npm run docs:diagram; npm run docs:pdf",
    "docs:pdf:bi": "md-to-pdf docs/AI_ARCHITECTURE_GUIDE_BI.md > docs/AI_Portable_Agent_Guide_BI.pdf",
    "docs:release": "npm run docs:diagram; npm run docs:pdf; npm run docs:pdf:bi; npm run docs:pdf:overview",
    "dev:personal": "cross-env PERSONAL_PORT=5600 MARKET_ALLOW_DB_FAIL=1 node server-personal.js",
    "test:personal": "powershell -ExecutionPolicy Bypass -File scripts/personal-smoke.ps1",
    "version:bump": "node scripts/bump-version.js",
    "docs:changelog": "node scripts/generate-changelog.js",
    "release:patch": "node scripts/release-patch.js",
    "release:minor": "cross-env BUMP=minor node scripts/release-patch.js",
    "release:major": "cross-env BUMP=major node scripts/release-patch.js",
    "quick:test": "powershell -ExecutionPolicy Bypass -File scripts/quick-test.ps1",
    "quick:test:node": "node scripts/quick-test.js",
    "quick:test:node:stripe": "node scripts/quick-test.js --stripe --report"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@aws-sdk/client-secrets-manager": "^3.679.0",
    "@aws-sdk/s3-request-presigner": "^3.679.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "fuse.js": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.7.0",
    "prom-client": "^15.1.3",
    "sharp": "^0.33.5",
    "stripe": "^13.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "md-to-pdf": "^5.2.5",
    "newman": "^6.1.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  }
}
