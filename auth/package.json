{
  "name": "axiom-auth-service",
  "version": "1.0.0",
  "description": "Standalone Auth service (Express + MongoDB + JWT) for AxiomHub",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npx nodemon server.js",
    "password:check": "node ./scripts/password-tool.js check --login",
    "password:set": "node ./scripts/password-tool.js set --login"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  }
}
